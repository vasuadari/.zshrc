zsh_vpn_connections(){
    local production_color='%F{yellow}'
    local staging_color='%F{yellow}'
    [[ $(vpn list|grep production) == 'production' ]]
    local production_vpn_signal=$?
    [[ $production_vpn_signal -eq 0 ]] && production_color='%F{green}'
    [[ ! $production_vpn_signal -eq 0 ]] && production_color='%F{red}'

    [[ $(vpn list|grep staging) == 'staging' ]]
    local staging_vpn_signal=$?
    [[ $staging_vpn_signal -eq 0 ]] && staging_color='%F{green}'
    [[ ! $staging_vpn_signal -eq 0 ]] && staging_color='%F{red}'
    echo -n "VPN ~ %{$production_color%} P%{%f%} %{$staging_color%} S%{%f%}" # \uf230 is 
}

POWERLEVEL9K_CUSTOM_VPN_CONNECTIONS="zsh_vpn_connections"
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status battery root_indicator background_jobs history time custom_vpn_connections)
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="↱"
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="↳ "
POWERLEVEL9K_TIME_FOREGROUND='255'
POWERLEVEL9K_TIME_BACKGROUND='000'
POWERLEVEL9K_PUBLIC_IP_HOST='http://ident.me'
POWERLEVEL9K_PUBLIC_IP_TIMEOUT=300
POWERLEVEL9K_COLOR_SCHEME='light'
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_RPROMPT_ON_NEWLINE=true
POWERLEVEL9K_PROMPT_ADD_NEWLINE=true
POWERLEVEL9K_CUSTOM_VPN_CONNECTIONS_BACKGROUND='000'
POWERLEVEL9K_CUSTOM_VPN_CONNECTIONS_FOREGROUND='255'
POWERLEVEL9K_HOST_ICON="\uF109 "
POWERLEVEL9K_SSH_ICON="\uF489 "
